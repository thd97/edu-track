<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frontend.NewStudentController">
    <VBox spacing="10" style="-fx-padding: 20;" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <Label text="Create New Student" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <TextField fx:id="fullNameField" promptText="Full Name"/>
        <TextField fx:id="emailField" promptText="Email"/>
        <TextField fx:id="phoneNumberField" promptText="Phone Number"/>
        <ComboBox fx:id="genderComboBox" promptText="Select Gender"/>
        <DatePicker fx:id="dateOfBirthPicker" promptText="Date of Birth"/>
        <TextField fx:id="addressField" promptText="Address"/>
        <TextField fx:id="classIdField" promptText="Class ID"/>

        <HBox spacing="10">
            <Button text="Save" onAction="#saveStudent"/>
            <Button text="Cancel" onAction="#cancelCreate"/>
        </HBox>
    </VBox>
</AnchorPane>
