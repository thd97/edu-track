<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frontend.DeleteClassController">
    <VBox spacing="15" style="-fx-padding: 20;" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

        <Label fx:id="confirmLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <HBox spacing="10">
            <Button text="Yes, Delete" onAction="#confirmDelete"/>
            <Button text="Cancel" onAction="#cancelDelete"/>
        </HBox>
    </VBox>
</AnchorPane>
