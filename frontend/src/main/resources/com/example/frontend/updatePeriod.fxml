<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frontend.UpdatePeriodController">
    <VBox spacing="10" style="-fx-padding: 20;" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <Label text="Update Period" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <TextField fx:id="periodNumberField" promptText="Period Number"/>
        <DatePicker fx:id="startDatePicker" promptText="Start Date"/>
        <DatePicker fx:id="endDatePicker" promptText="End Date"/>

        <HBox spacing="10">
            <Button text="Update" onAction="#updatePeriod"/>
            <Button text="Cancel" onAction="#cancelUpdate"/>
        </HBox>
    </VBox>
</AnchorPane>
