<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frontend.NewAccountController">
    <VBox spacing="10" style="-fx-padding: 20;" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <Label text="Create New Account" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <TextField fx:id="fullNameField" promptText="Full Name"/>
        <TextField fx:id="usernameField" promptText="Username"/>
        <TextField fx:id="passwordField" promptText="Password"/>
        <TextField fx:id="emailField" promptText="Email"/>

        <ComboBox fx:id="roleChoiceBox" promptText="Select Role"/>
        <TextField fx:id="phoneNumberField" promptText="Phone Number"/>
        <ComboBox fx:id="genderChoiceBox" promptText="Select Gender"/>

        <HBox spacing="10">
            <Button text="Save" onAction="#saveAccount"/>
            <Button text="Cancel" onAction="#cancelCreate"/>
        </HBox>
    </VBox>
</AnchorPane>
