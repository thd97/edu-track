<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.frontend.NewExamController">
    <VBox spacing="10" style="-fx-padding: 20;" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <Label text="Create New Exam" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

        <TextField fx:id="nameField" promptText="Exam Name"/>
        <DatePicker fx:id="examDatePicker" promptText="Exam Date"/>

        <HBox spacing="10">
            <Button text="Save" onAction="#saveExam"/>
            <Button text="Cancel" onAction="#cancelCreate"/>
        </HBox>
    </VBox>
</AnchorPane>
