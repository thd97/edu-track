<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.frontend.NewStudentController">
    <children>
        <Label text="Create New Student" layoutX="50" layoutY="30"/>

        <TextField fx:id="nameField" layoutX="50" layoutY="70" promptText="Name"/>
        <TextField fx:id="emailField" layoutX="50" layoutY="110" promptText="Email"/>
        <TextField fx:id="phoneField" layoutX="50" layoutY="150" promptText="Phone"/>

        <ComboBox fx:id="genderCombo" layoutX="50" layoutY="190" prefWidth="200"/>
        <DatePicker fx:id="dobPicker" layoutX="50" layoutY="230"/>
        <TextField fx:id="addressField" layoutX="50" layoutY="270" promptText="Address"/>

        <ComboBox fx:id="classComboBox" layoutX="50" layoutY="310" prefWidth="200" promptText="Select Class"/>

        <Button fx:id="saveButton" text="Save" layoutX="50" layoutY="360"/>
        <Button fx:id="cancelButton" text="Cancel" layoutX="110" layoutY="360"/>
    </children>
</AnchorPane>

