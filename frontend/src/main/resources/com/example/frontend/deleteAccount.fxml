<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.frontend.DeleteAccountController">
    <VBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
        <Label fx:id="confirmationLabel" text="Bạn có chắc chắn muốn xóa tài khoản này?" style="-fx-font-size: 18px;"/>
        <VBox spacing="10">
            <Button fx:id="deleteButton" text="Xóa" onAction="#deleteAccount" />
            <Button fx:id="cancelButton" text="Hủy" onAction="#cancelDelete" />
        </VBox>
    </VBox>
</AnchorPane>