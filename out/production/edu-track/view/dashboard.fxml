<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.dashboardController">
   <center>
      <AnchorPane BorderPane.alignment="CENTER" fx:id="tableView">
         <children>
            <VBox layoutX="166.0" prefHeight="646.0" prefWidth="682.0">
               <children>
                    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 20;">
                     <VBox>
                        <children>
                              <Label prefHeight="48.0" prefWidth="147.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 5;" text="Active issues">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </Label>
                           <HBox>
                              <children>
                        
                                                <!-- Search box -->
                                    <HBox alignment="CENTER_LEFT" spacing="5" style="-fx-background-color: #F5F5F5; -fx-padding: 6 10 6 10; -fx-background-radius: 5; -fx-border-color: black; -fx-border-radius: 5;">
                                        <Label prefHeight="17.0" prefWidth="16.0" text="🔍" />
                                        <TextField fx:id="txtSearch" prefHeight="25.0" prefWidth="265.0" promptText="Search tickets..." style="-fx-background-color: transparent; -fx-border-width: 0; -fx-border-color: black;" />
                                    </HBox>
                        
                                                                                          <!-- Nút Filter -->
                                    <Button fx:id="btnFilter" prefHeight="39.0" prefWidth="79.0" style="-fx-background-color: #F5F5F5; -fx-background-radius: 5; -fx-padding: 6 10 6 10; -fx-border-color: black; -fx-border-radius: 5;" text="🧹 Filter" />
                              </children>
                           </HBox>
                        </children>
                     </VBox>
            
                                    <!-- Spacer -->
                        <Region prefHeight="69.0" prefWidth="48.0" HBox.hgrow="ALWAYS" />
            
                                    <!-- Nút chế độ xem -->
                        <Button fx:id="btnListView" style="-fx-background-color: transparent; -fx-font-size: 18px;" text="☰" />
                        <Button fx:id="btnCalendarView" style="-fx-background-color: transparent; -fx-font-size: 18px;" text="📅" />
                    </HBox>
                    <AnchorPane fx:id="contentArea" prefHeight="519.0" prefWidth="564.0" />
               </children>
            </VBox>
              <VBox alignment="TOP_LEFT" prefHeight="646.0" prefWidth="163.0" style="-fx-background-color: #FAFAFA;">
                  <padding>
                      <Insets bottom="20" left="20" right="20" top="0" />
                  </padding>
      
                           <!-- Tiêu đề Dashboard -->
                  <Label prefHeight="58.0" prefWidth="118.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Dashboard">
                  <font>
                     <Font name="System Bold" size="18.0" />
                  </font>
               </Label>
      
                                 <!-- Menu Buttons -->
                  <VBox prefHeight="558.0" prefWidth="123.0" spacing="10" style="-fx-padding: 20 0 0 0;">
                      <Button fx:id="btnAccounts" style="-fx-background-color: transparent;" text="Accounts">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                      <Button fx:id="btnTeachers" style="-fx-background-color: transparent;" text="Teachers">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                      <Button fx:id="btnStudents" style="-fx-background-color: transparent;" text="Students">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                      <Button fx:id="btnClasses" style="-fx-background-color: transparent;" text="Classes">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                      <Button fx:id="btnExams" style="-fx-background-color: transparent;" text="Exams">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                      <Button fx:id="btnResults" style="-fx-background-color: transparent;" text="Exam results">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                      <Button fx:id="btnAttendance" style="-fx-background-color: transparent;" text="Attendance">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <VBox alignment="BOTTOM_CENTER" prefHeight="244.0" prefWidth="123.0" style="-fx-padding: 20;">
                     <children>
               
                                          <!-- Nút Logout -->
                           <Button fx:id="btnLogout" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16 8 16; -fx-background-radius: 6;" text="LOGOUT" />
                     </children>
                  </VBox>
                  </VBox>
              </VBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
